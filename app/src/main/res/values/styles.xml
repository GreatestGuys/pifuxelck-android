<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActionButton">
        <item name="android:layout_width">64dip</item>
        <item name="android:layout_height">64dip</item>
        <item name="android:elevation">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/action_button_background</item>
    </style>

    <style name="ActionButton.Ok">
        <item name="android:src">@drawable/ic_send_white_36dp</item>
    </style>

    <style name="ActionButton.New">
        <item name="android:src">@drawable/ic_add_white_48dp</item>
    </style>

    <style name="ActionButton.More">
        <item name="android:src">@drawable/ic_more_horiz_white_48dp</item>
    </style>

    <style name="ActionButton.Back">
        <item name="android:src">@drawable/ic_undo_white_48dp</item>
    </style>

    <style name="ActionButton.Small">
        <item name="android:layout_width">48dip</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name="ActionButton.Small.Size">
        <item name="android:src">@drawable/ic_play_arrow_white_48dp</item>
    </style>

    <style name="ActionButton.Small.Color">
        <item name="android:src">@drawable/ic_brightness_1_white_18dp</item>
    </style>

    <style name="ActionButton.Small.Background">
        <item name="android:src">@drawable/ic_stop_white_36dp</item>
    </style>

    <style name="DrawingView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="DrawingView.Background">
        <item name="android:alpha">0.13</item>
        <item name="android:layout_height">100000000dp</item>
        <item name="android:clickable">false</item>
    </style>

</resources>
